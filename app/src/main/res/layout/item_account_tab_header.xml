<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ll_root"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:layout_marginTop="2px"
    android:background="@color/cl_ffffffff"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/account_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_weight="2"
        android:text="帐号3：" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尚未添加" />

        <TextView
            android:id="@+id/service_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务空闲"
            android:textColor="@color/logout_bt_bj" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/bt_use_service"
            android:layout_width="160px"
            android:layout_height="60px"
            android:layout_centerInParent="true"
            android:background="@drawable/select_logout_button_bg"
            android:text="使用服务"
            android:textColor="@color/cl_ffffffff" />

    </RelativeLayout>


</LinearLayout>