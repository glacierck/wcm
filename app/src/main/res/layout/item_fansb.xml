<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_ffffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/me_bj_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_ffffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px">

            <TextView
                android:id="@+id/item_fansb_service_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/service_type"
                android:textColor="@color/service_font"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_fansb_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/time"
                android:textColor="@color/logout_bt_bj"
                android:textSize="30px" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_fansb_describe"
                    style="@style/ServiceText"
                    android:text="@string/service_info" />

                <TextView
                    android:id="@+id/item_fansb_cycle"
                    style="@style/ServiceText"
                    android:text="@string/detail_time" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/item_fansb_use"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="160px"
                    android:layout_height="60px"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/select_logout_button_bg"
                    android:text="@string/use_1"
                    android:textColor="@color/cl_ffffffff" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>