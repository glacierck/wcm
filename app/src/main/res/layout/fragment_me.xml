<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_bj"
    android:baselineAligned="false"
    android:orientation="vertical">


    <include layout="@layout/tool" />

    <include layout="@layout/include_me_center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--<include layout="@layout/include_tool_bar"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/me_bj"
                android:orientation="vertical"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="40px">

                <include layout="@layout/include_me_frag_total" />
            </LinearLayout>

            <TextView
                android:id="@+id/me_deal"
                style="@style/MeFrgText"
                android:layout_marginTop="30px"
                android:text="@string/deal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/me_bj_list"
                android:visibility="gone" />

            <TextView
                android:id="@+id/me_change_device"
                style="@style/MeFrgText"
                android:text="@string/change_device"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/me_bj_list" />

            <TextView
                android:id="@+id/me_help"
                style="@style/MeFrgText"
                android:text="@string/help_and_service" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/me_bj_list" />

            <TextView
                android:id="@+id/me_push"
                style="@style/MeFrgText"
                android:text="@string/push_msg"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/me_bj_list"
                android:visibility="gone" />


            <TextView
                android:id="@+id/me_fans"
                style="@style/MeFrgText"
                android:text="@string/me_fans" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/me_bj_list" />


            <TextView
                android:id="@+id/me_about"
                style="@style/MeFrgText"
                android:text="@string/me_about" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/me_bj_list" />

            <RelativeLayout
                android:id="@+id/ll_me_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/select_me_item_bg">

                <TextView
                    android:id="@+id/me_update"
                    style="@style/MeFrgText2"
                    android:text="@string/me_update" />
                <!--android:drawableLeft="@drawable/shape_red_point"-->
                <TextView
                    android:id="@+id/versionName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="10px"
                    android:paddingRight="30px"
                    android:text="v1.1.0" />


            </RelativeLayout>


            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:background="@color/bg_btn" />-->
            <!--去掉button 自带阴影效果-->
            <Button
                android:id="@+id/me_logout"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="500px"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40px"
                android:background="@drawable/select_logout_button_bg"
                android:gravity="center"
                android:text="@string/logout"
                android:textColor="@color/cl_ffffffff"
                android:textSize="30px"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>