<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_bj"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="40px"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/token_error"
        android:textColor="@color/service_font"
        android:textSize="30px"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="40px"
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/token_expired"
        android:textColor="@color/service_font"
        android:textSize="26px" />

    <Button
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="40px"
        android:id="@+id/dialog_login_enter"
        android:layout_width="320px"
        android:layout_height="60px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40px"
        android:background="@drawable/select_red_bg"
        android:text="@string/logout"
        android:textColor="@color/cl_ffffffff"
        android:textSize="12sp" />


</LinearLayout>