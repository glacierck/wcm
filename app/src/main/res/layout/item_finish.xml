            <TextView
                android:id="@+id/finish_account"
                style="@style/ServiceText"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="@string/account_nickname" />

            <TextView
                android:id="@+id/finish_fans_total"
                style="@style/FinishText"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/fans_total"
                android:visibility="gone" />

        </LinearLayout>


