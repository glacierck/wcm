        android:layout_alignParentStart="true">
        <include layout="@layout/tool"/>
        <WebView
            android:id="@+id/wb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



</RelativeLayout>