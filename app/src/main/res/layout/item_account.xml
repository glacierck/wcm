<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_ffffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/me_bj_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:background="@color/cl_ffffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29px"
            android:layout_weight="1"
            android:text="18631486845"
            android:textColor="@color/service_font"
            android:textSize="30px" />

        <TextView
            android:id="@+id/tv_band_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bind_no1"
            android:textColor="@color/service_font"
            android:textSize="30px" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_weight="1">

            <Button
                android:id="@+id/bt_info"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="160px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:background="@drawable/select_logout_button_bg"
                android:text="@string/look_datit"
                android:textColor="@color/cl_ffffffff"
                android:textSize="26px" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>