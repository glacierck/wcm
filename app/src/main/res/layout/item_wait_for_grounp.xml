<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_ffffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/me_bj_list"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_ffffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/grounp_name"
            android:layout_width="0dp"
            android:layout_height="140px"
            android:layout_marginLeft="35px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/text_6"
            android:textSize="18sp" />

        <Button
            android:id="@+id/grounp_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140px"
            android:layout_height="70px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="35px"
            android:background="@drawable/select_logout_button_bg"
            android:text="@string/in_grounp"
            android:textColor="@color/cl_ffffffff" />
    </LinearLayout>
</LinearLayout>