<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_bj"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:ellipsize="end"
        android:gravity="center"
        android:text="选择操作"
        android:textColor="@color/service_font"
        android:textSize="30px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="40px"
        android:text="@string/select_oprator"
        android:textColor="@color/service_font"
        android:textSize="26px" />


    <LinearLayout
        android:layout_marginTop="40px"
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_marginBottom="40px"
            android:id="@+id/again_confirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:background="@drawable/select_red_bg"
            android:gravity="center"
            android:text="使用服务"
            android:textColor="@color/rippelColor"
            android:textSize="26px" />

        <Button
            android:visibility="gone"
            android:layout_marginBottom="40px"
            android:id="@+id/add"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_marginTop="20px"
            android:background="@drawable/select_red_bg"
            android:gravity="center"
            android:text="我要换号"
            android:textColor="@color/rippelColor"
            android:textSize="26px" />

    </LinearLayout>


</LinearLayout>