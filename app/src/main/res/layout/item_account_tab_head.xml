<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/me_bj_list"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_ffffffff"
        android:gravity="center"
        android:layout_marginTop="1px"
        android:minHeight="124px"
        android:orientation="horizontal"
        android:padding="30px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@color/cl_ffffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:maxLines="1"
                    android:text="帐号3："
                    android:textColor="@color/service_font"
                    android:textSize="30px" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/account_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/no_add"
                            android:textColor="@color/me_7D7D7D"
                            android:textSize="30px" />

                        <ImageView
                            android:id="@+id/device_status"
                            android:layout_width="31px"
                            android:layout_height="31px"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30px"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!--<TextView-->
                    <!--android:id="@+id/service_status"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="20px"-->
                    <!--android:maxLines="1"-->
                    <!--android:text="@string/service_free"-->
                    <!--android:textColor="@color/logout_bt_bj"-->
                    <!--android:textSize="22px" />-->
                </LinearLayout>
            </LinearLayout>

            <!--android:visibility="gone"-->
            <LinearLayout
                android:id="@+id/ll_Progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_service_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/service_count" />

                <TextView
                    android:id="@+id/service_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="1个"
                    android:textColor="@color/me_7D7D7D"
                    android:textSize="22px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_service_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_service_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/progress_status"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/service_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/service_free"
                    android:textColor="@color/cl_7895F3"
                    android:textSize="22px" />
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <Button
                android:id="@+id/bt_use_service"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="160px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:background="@drawable/select_logout_button_bg"
                android:text="@string/user_service"
                android:textColor="@color/cl_ffffffff"
                android:textSize="26px" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>