<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_bj"
    android:orientation="vertical">

    <include layout="@layout/tool" />

    <LinearLayout
        android:id="@+id/imei_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px"
        android:layout_marginTop="120px"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/machineCode"
            style="@style/EditTextStyle_Common"
            android:layout_width="0dp"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:hint="@string/please_enter_IMEI"
            android:inputType="number"
            android:maxLength="18" />

        <RelativeLayout
            android:id="@+id/rl_scan"
            android:layout_width="60px"
            android:layout_height="60px">

            <ImageView
                android:id="@+id/scan"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_centerInParent="true"
                android:src="@drawable/saoma" />
        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/please_text_IMEI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px"
        android:layout_marginTop="40px"
        android:lineSpacingExtra="10px"
        android:text="@string/please_enter_IMEI_1"
        android:textColor="@color/me_7D7D7D"
        android:textSize="22px" />

    <TextView
        android:id="@+id/please_text_IMEI2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10px"
        android:text="@string/please_enter_IMEI_2"
        android:textColor="@color/cl_ccf95e5e"
        android:textSize="22px" />

    <TextView
        android:id="@+id/please_text_IMEI3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="10px"
        android:text="@string/please_enter_IMEI_4"
        android:textColor="@color/cl_ccf95e5e"
        android:textSize="22px" />

    <Button
        android:id="@+id/replace_enter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px"
        android:layout_marginTop="80px"
        android:background="@drawable/select_logout_button_bg"
        android:text="@string/request_replace"
        android:textColor="@color/cl_ffffffff"
        android:textSize="30px"
        android:textStyle="bold" />


</LinearLayout>