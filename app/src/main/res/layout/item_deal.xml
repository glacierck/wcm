<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_ffffffff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/me_bj_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/cl_ffffffff"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/deal_service_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="1"
                android:text="@string/service_type"
                android:textColor="@color/service_font"
                android:textSize="30px" />

            <TextView
                android:id="@+id/deal_use"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/use"
                android:textColor="@color/service_font"
                android:textSize="30px"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/deal_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30px"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/money"
                android:textColor="@color/progress_error"
                android:textSize="30px"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/deal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="16px"
            android:text="@string/time"
            android:textColor="@color/me_7D7D7D"
            android:textSize="22px" />
    </LinearLayout>
</LinearLayout>