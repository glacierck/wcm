<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_E1E1E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cl_ffffffff"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="40px"
            android:id="@+id/equip_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shebei_normal_big" />

        <TextView
            android:id="@+id/equip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:text="@string/device_name"
            android:textColor="@color/service_font"
            android:textSize="30px" />
    </LinearLayout>


</LinearLayout>