<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inlicde_rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10px"
            android:text="@string/post_email"
            android:textColor="@color/me_7D7D7D"
            android:textSize="22px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@color/rippelColor"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <EditText
            style="@style/EditTextStyle_Common"
            android:id="@+id/email"
            android:hint="@string/post_email_hind" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10px"
            android:text="@string/beizhu"
            android:textColor="@color/me_7D7D7D"
            android:textSize="22px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:background="@color/rippelColor"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30px">

        <EditText
            android:id="@+id/remarks"
            android:paddingTop="20px"
            android:gravity="top"
            android:paddingLeft="15px"
            android:hint="@string/beizhu_hind"
            android:textColorHint="@color/cl_cbcbcb"
            android:textSize="26px"
            android:textColor="@color/service_font"
            android:layout_width="match_parent"
            android:layout_height="185px"
            android:layout_centerVertical="true"
            android:background="@drawable/select_post_new_bg" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView

            android:id="@+id/open_bill_explain"
            android:gravity="bottom"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10px"
            android:layout_marginRight="30px"
            android:text="@string/kaipiao_shuoming"
            android:textColor="@color/me_7D7D7D"
            android:textSize="22px" />
    </RelativeLayout>

</LinearLayout>

