<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@drawable/shape_dialog_bj"
              android:orientation="vertical">

    <TextView
    android:id="@+id/tv_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:gravity="center"
    android:paddingTop="40px"
    android:text="@string/update_success"
    android:textColor="@color/service_font"
    android:textSize="30px"
    android:textStyle="bold"/>

    <TextView
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="60dp"
        android:text="@string/re_login"
        android:textColor="@color/service_font"
        android:textSize="26px"/>

    <Button
        android:textStyle="bold"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/dialog_login_enter"
        android:layout_width="200px"
        android:layout_height="60px"
        android:layout_marginBottom="40px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/select_red_bg"
        android:text="@string/ok"
        android:textColor="@color/cl_ffffffff"
        android:textSize="12sp"/>


</LinearLayout>