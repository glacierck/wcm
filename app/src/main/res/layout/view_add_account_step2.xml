    <LinearLayout
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px"
        android:background="@drawable/shape_dialog_bj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="139px"
        android:orientation="horizontal">
        <EditText
            android:layout_marginRight="5px"
            android:paddingLeft="10px"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/cl_cbcbcb"
            android:textSize="26px"
            android:textColor="@color/service_font"
            android:background="@null"
            android:maxLength="30"
            android:id="@+id/wechatNo"
            android:hint="@string/please_enter_weixin_no"/>

        <CheckBox
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/phone"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20px"
            android:button="@drawable/name"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="125px"
