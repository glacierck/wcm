        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="70px"
            android:layout_marginRight="5px"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/please_enter_weixin_passworld"

            android:maxLength="30"
            android:maxLines="1"
            android:paddingLeft="10px"
            android:singleLine="true"
            android:textColor="@color/service_font"
            android:textColorHint="@color/cl_cbcbcb"
            android:textSize="26px" />
        <!--android:inputType="textPassword"-->

        <CheckBox
            android:checked="true"
            android:id="@+id/et_password_icon"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20px"
            android:button="@drawable/select_login_passwold_bg"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <TextView
