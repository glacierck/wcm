<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ll_root"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/cl_ffffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/me_bj_list"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/cl_ffffffff"
        android:orientation="horizontal">

        <com.kongrongqi.shopmall.wedget.SmoothCheckBox
            android:id="@+id/check_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50px"
            app:color_checked="@color/login_button_bj"
            app:color_unchecked="@color/cl_ffffffff"
            app:stroke_width="1px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50px"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guanfan_service"
                    android:textColor="@color/service_font"
                    android:textSize="30px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/fan_10"
                    android:textColor="@color/cl_ffff0000"
                    android:textSize="30px" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>