<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_ffffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/me_bj_list"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginTop="2px"
        android:background="@color/cl_ffffffff">

        <LinearLayout
            android:id="@+id/deal_ll"
            android:layout_width="280px"
            android:layout_height="match_parent"
            android:layout_marginLeft="100px"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_invoces_service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_type"
                android:textColor="@color/service_font"
                android:textSize="30px" />

            <TextView
                android:id="@+id/item_invoces_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="@string/time"
                android:textSize="22px" />


        </LinearLayout>

        <TextView
            android:id="@+id/item_invoces_use"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="@string/use"
            android:textColor="@color/service_font"
            android:textSize="30px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_invoces_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:text="@string/money"
            android:textColor="@color/cl_ffff0000"
            android:textStyle="bold" />

        <com.kongrongqi.shopmall.wedget.SmoothCheckBox
            android:id="@+id/item_invoice_checkbox"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            app:color_checked="@color/login_button_bj"
            app:color_unchecked="@color/cl_ffffffff"
            app:stroke_width="2px" />
    </RelativeLayout>
</RelativeLayout>