<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp"/>
            <stroke android:width="0.5dp" android:color="#4d989899"></stroke>
            <!-- 填充的颜色 -->
            <solid android:color="#FFFFFF" />
            <!-- 各方向的间隔 -->
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="10dp"/>
                <solid android:color="#FFFFFF" />
                <!-- 各方向的间隔 -->
                <padding
                    android:left="0.5dp"
                    android:top="0.5dp"
                    android:right="0.5dp"
                    android:bottom="0.5dp"/>

            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp"/>
                <solid android:color="#eff3ff" />
                <!-- 各方向的间隔 -->
                <padding
                    android:left="0.5dp"
                    android:top="0.5dp"
                    android:right="0.5dp"
                    android:bottom="0.5dp"/>
            </shape>
        </clip>
    </item>

</layer-list>