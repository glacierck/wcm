<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/errorStateRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/errorViewRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/error404"/>
        <TextView
            android:textSize="30px"
            android:layout_marginTop="80px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_text"/>

        <LinearLayout
            android:layout_marginTop="80px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:visibility="gone"
                android:id="@+id/errorStateButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60px"
                android:background="@drawable/select_logout_button_bg"
                android:gravity="center"
                android:text="@string/finish_view"
                android:layout_marginRight="40px"
                android:textColor="#ffffff"
                android:textSize="30px"
                android:textStyle="bold" />
            <Button
                android:id="@+id/errorStateButton_refrash"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60px"
                android:background="@drawable/select_logout_button_bg"
                android:gravity="center"
                android:text="@string/refresh"
                android:textColor="#ffffff"
                android:textSize="30px"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>